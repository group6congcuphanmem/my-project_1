<% include ../layout/header.ejs %>
<div class="header-top">
 <div class="wrap">
  <div class="logo">
    <%include ../page/Logo %>
    </div>
    <div class="cssmenu">
    <% include ../page/Menu %>
  </div>
  <div class="clear"></div>
</div>
 </div>
      <%include ../page/Category %>
     <div class="clear"></div>

<div id="maincontainer">
  <section id="product">
    <div class="container">
      <!-- Product Details-->
      <div class="row">
       <!-- Left Image-->
        <div class="span5">
          <ul class="thumbnails mainimage">
            <li class="span5">
              <a  rel="position: 'inside' , showTitle: false, adjustX:-4, adjustY:-4" class="thumbnail cloud-zoom" href="images/<%= data.img%>">
                <img src="upload/<%= data.img%>" alt="" title="">
              </a>
            </li>

          </ul>

        </div>
         <!-- Right Details-->
        <div class="span7">
          <div class="row">
            <div class="span7">
              <h1 class="productname"><span class="bgnone"><%= data.name%></span></h1>
              <div class="productprice">
                <div class="productpageprice">

                  <span class="spiral"></span><%= data.price%>₫</div>

              </div>
              <ul class="productpagecart">
                <li><a class="cart" href="/add-cart.<%= data._id %>">Add to Cart</a>
                </li>
              </ul>
         <!-- Product Description tab & comments-->
         <div class="productdesc">
                <ul class="nav nav-tabs" id="myTab">
                  <li class="active"><a href="#description">Description</a>
                  </li>

                </ul>
                <div class="tab-content">
                  <div class="tab-pane active" id="description">
                    <h2>Chi Tiết Sản Phẩm</h2>
                    <%= data.des%>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
